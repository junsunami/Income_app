<div class="container">
    <div class="col-lg-auto">
        <h1>時給ログ</h1>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        時給換算
                    </th>
                    <th>
                        日付
                    </th>
                    <th>
                        かかった時間
                    </th>
                    <th>
                        仕事単価
                    </th>
                    <th>
                        仕事内容        
                    </th>
                    <th>
                        編集
                    </th>
                    <th>
                        削除
                    </th>
                </tr>
            </thead>
            <tbody id="posts">
            <%= render @posts %>
            </tbody>
        </table>
        <div id="paginator">
            <%= paginate @posts, them: 'twitter-bootstrap-4', pagination_class: "pagination-sm", nav_class: "d-inline-b", remote: true %>
        </div>
    </div>
</div>