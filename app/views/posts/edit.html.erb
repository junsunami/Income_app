<div class="container">
    <div class="col-lg-auto">
        <h1>タスクを編集</h1>

        <%= form_for @post, class: "form-horizontal" do |f| %>
            <div class="form-group">
                <%= f.label :"仕事内容", class: "col-sm-2 control-label" %>
                <%= f.text_field :description, class: "form-control"  %>
            </div>

            <div class="form-group">
                <%= f.label :"単価", class: "col-sm-2 control-label" %>
                <%= f.number_field :price, class: "form-control"  %>
            </div>

            <div class="form-group">
                <%= f.label :"経過時間", class: "col-sm-2 control-label" %>
                <%= f.number_field :elapsed_time, class: "form-control"  %>
            </div>

            <%= f.submit "Save", class: "btn btn-primary btn-block" %>
        <% end %>
    </div>
</div>