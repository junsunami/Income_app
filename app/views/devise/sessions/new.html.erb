<div class="container">
    <div class="col-lg-auto">
      <h2 class="text-white">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class:"text-white" %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "サンプルメール：webapp.sample.test@gmail.com
" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class:"text-white" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "サンプルログイン：12345678" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check">
            <%= f.check_box :remember_me, class:"form-check-input" %>
            <%= f.label :remember_me, class:"form-check-label text-white" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class:"btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>